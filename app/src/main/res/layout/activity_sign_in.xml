<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/dim10"
    tools:context=".sing.SignInActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dim20"
        android:id="@+id/login_image"
        android:src="@drawable/log_in_image"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dim5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Welcome"
        android:layout_marginLeft="@dimen/dim20"
        android:textSize="9sp"
        android:layout_marginTop="@dimen/dim5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Sign"
        android:layout_marginLeft="@dimen/dim20"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dim10"
        />
<LinearLayout
