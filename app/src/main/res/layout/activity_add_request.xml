<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.AddRequestActivity"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim5"
            android:layout_marginRight="@dimen/dim20"
            android:onClick="back_to_home_post"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Request"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dim60"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:onClick="add_post"
            android:layout_marginRight="@dimen/dim40"
            android:textStyle="bold"
            />
       </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dim20"
        android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plasma"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dim30"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
                <Spinner
                    android:id="@+id/blood_need_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim20"
                    />
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dim20"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Units Needed"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dim30"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:inputType="numberDecimal"
           android:layout_marginLeft="@dimen/dim20"
           />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim30"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim20"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a"
                android:onClick="getLocation"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dim20">
                <TextView
                    android:id="@+id/get_location_txt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:text="Get Current Location"
                    android:layout_marginRight="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim2"
                    android:layout_marginLeft="@dimen/dim5"
                    android:layout_alignParentLeft="true"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dim5"
                    android:layout_marginRight="@dimen/dim5"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim20"
            android:textColor="@color/colorPrimary"
            />
    </RadioGroup>
</LinearLayout>